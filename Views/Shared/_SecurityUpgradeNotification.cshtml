@model DoAnWeb.Models.User

@if (Model != null && Model.HashType == "PBKDF2" && Model.LastPasswordChangeDate.HasValue && (DateTime.Now - Model.LastPasswordChangeDate.Value).TotalDays < 1)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-shield-check me-2"></i>
        <strong>Bảo mật tài khoản của bạn đã được nâng cấp!</strong> Chúng tôi đã tự động cập nhật phương thức bảo vệ mật khẩu của bạn sang một chuẩn an toàn hơn.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
} 