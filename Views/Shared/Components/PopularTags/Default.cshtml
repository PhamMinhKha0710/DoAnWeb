@model List<(string Name, int Count)>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-light">
        <h6 class="card-title fw-bold mb-0">Popular Tags</h6>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Count > 0)
        {
            <ul class="list-group list-group-flush">
                @foreach (var tag in Model)
                {
                    <li class="list-group-item border-0 py-2 px-3 d-flex justify-content-between align-items-center">
                        <a asp-controller="Questions" asp-action="Tagged" asp-route-tagName="@tag.Name" 
                           class="text-decoration-none">
                            <span class="badge rounded-pill text-bg-light">@tag.Name</span>
                        </a>
                        <span class="badge bg-secondary rounded-pill">@tag.Count</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="p-3 text-center">
                <span class="text-muted small">No tags available</span>
            </div>
        }
    </div>
    <div class="card-footer bg-light p-2">
        <a asp-controller="Tags" asp-action="Index" class="small text-decoration-none d-block text-center">
            View all tags
        </a>
    </div>
</div> 