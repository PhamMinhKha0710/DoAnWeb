@model DoAnWeb.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account-styles.css" />
    <style>
        /* Modern profile page styles */
        .profile-page {
            background-color: #f8f9fa;
            padding: 2rem 0;
        }
        
        .profile-container {
            max-width: 1000px;
            margin: 0 auto;
        }
        
        .profile-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            overflow: hidden;
            margin-bottom: 2rem;
        }
        
        .profile-header {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 2.5rem 2rem;
            position: relative;
        }
        
        .profile-header-content {
            position: relative;
            z-index: 2;
        }
        
        .profile-avatar-wrapper {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto;
        }
        
        .profile-avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid rgba(255,255,255,0.5);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
        
        .avatar-edit {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 35px;
            height: 35px;
            background-color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 3;
        }
        
        .avatar-edit:hover {
            transform: scale(1.1);
        }
        
        .profile-name {
            font-size: 1.75rem;
            font-weight: 700;
            margin: 1rem 0 0.25rem;
            text-align: center;
        }
        
        .profile-username {
            font-size: 1rem;
            opacity: 0.9;
            margin-bottom: 0.5rem;
            text-align: center;
        }
        
        .profile-stats {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 1.5rem;
        }
        
        .stat-item {
            text-align: center;
            background-color: rgba(255,255,255,0.1);
            padding: 0.5rem 1rem;
            border-radius: 10px;
            min-width: 80px;
        }
        
        .stat-value {
            font-weight: 700;
            font-size: 1.25rem;
        }
        
        .stat-label {
            font-size: 0.75rem;
            opacity: 0.9;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .profile-body {
            padding: 2rem;
        }
        
        .profile-section {
            margin-bottom: 2rem;
        }
        
        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #333;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .section-title i {
            color: #2575fc;
        }
        
        .form-floating {
            margin-bottom: 1.5rem;
        }
        
        .form-control {
            border-radius: 10px;
            padding: 0.75rem 1rem;
            border: 1px solid #e1e5ea;
            background-color: #f8f9fa;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            border-color: #2575fc;
            box-shadow: 0 0 0 0.25rem rgba(37, 117, 252, 0.25);
            background-color: #fff;
        }
        
        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: #495057;
        }
        
        .btn-profile {
            padding: 0.5rem 1.5rem;
            border-radius: 10px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }
        
        .btn-primary {
            background-color: #2575fc;
            border-color: #2575fc;
        }
        
        .btn-primary:hover {
            background-color: #1a68e5;
            border-color: #1a68e5;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(26, 104, 229, 0.3);
        }
        
        .nav-tabs {
            border-bottom: none;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }
        
        .nav-tabs .nav-link {
            border: none;
            border-radius: 10px;
            color: #6c757d;
            font-weight: 500;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
        }
        
        .nav-tabs .nav-link:hover {
            color: #2575fc;
            background-color: rgba(37, 117, 252, 0.05);
        }
        
        .nav-tabs .nav-link.active {
            color: #2575fc;
            background-color: rgba(37, 117, 252, 0.1);
            font-weight: 600;
        }
        
        .alert {
            border-radius: 10px;
            padding: 1rem;
        }
        
        .verification-badge {
            display: inline-flex;
            align-items: center;
            background-color: rgba(25, 135, 84, 0.1);
            color: #198754;
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            margin-left: 1rem;
        }
        
        .verification-badge.not-verified {
            background-color: rgba(255, 193, 7, 0.1);
            color: #ffc107;
        }
    </style>
}

<div class="profile-page">
    <div class="container profile-container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                <div>@TempData["SuccessMessage"]</div>
            </div>
        }
        
        <form asp-action="Profile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="UserId" />
            
            <div class="profile-card">
                <div class="profile-header">
                    <div class="profile-header-content">
                        <div class="profile-avatar-wrapper">
                            <img id="profile-image-preview" src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "/images/default-avatar.png" : Model.AvatarUrl)" 
                                class="profile-avatar" alt="Profile Picture" />
                            <div class="avatar-edit" id="trigger-file-upload">
                                <i class="bi bi-camera-fill"></i>
                            </div>
                        </div>
                        <h1 class="profile-name">@Model.DisplayName</h1>
                        <p class="profile-username">@@@Model.Username</p>
                        <p class="text-center">
                            <i class="bi bi-calendar3 me-1"></i> Member since @(Model.MemberSince?.ToString("MMM yyyy") ?? DateTime.Now.AddMonths(-3).ToString("MMM yyyy"))
                        </p>
                        
                        <div class="profile-stats">
                            <div class="stat-item">
                                <div class="stat-value">@Model.Reputation</div>
                                <div class="stat-label">Rep</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">@Model.PostCount</div>
                                <div class="stat-label">Posts</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">@Model.CommentCount</div>
                                <div class="stat-label">Comments</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">@Model.TagCount</div>
                                <div class="stat-label">Tags</div>
                            </div>
                        </div>
                        
                        <div class="text-center mt-3">
                            <input type="file" id="profile-image-upload" name="ProfileImage" class="d-none" accept="image/*" />
                            <input type="hidden" asp-for="AvatarUrl" id="avatar-url-field" />
                            <input type="hidden" name="RemoveAvatar" id="remove-avatar-field" value="false" />
                            <button type="button" id="remove-profile-btn" class="btn btn-sm btn-light @(string.IsNullOrEmpty(Model.AvatarUrl) ? "d-none" : "")">
                                <i class="bi bi-trash me-1"></i> Remove Photo
                            </button>
                        </div>
                    </div>
                </div>

                <div class="profile-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info-tab-pane" 
                                    type="button" role="tab" aria-controls="info-tab-pane" aria-selected="true">
                                <i class="bi bi-person-fill me-1"></i> Personal Info
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#security-tab-pane" 
                                    type="button" role="tab" aria-controls="security-tab-pane" aria-selected="false">
                                <i class="bi bi-shield-lock-fill me-1"></i> Security
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="integrations-tab" data-bs-toggle="tab" data-bs-target="#integrations-tab-pane" 
                                    type="button" role="tab" aria-controls="integrations-tab-pane" aria-selected="false">
                                <i class="bi bi-link-45deg me-1"></i> Integrations
                            </button>
                        </li>
                    </ul>
                    
                    <div class="tab-content">
                        <!-- Personal Info Tab -->
                        <div class="tab-pane fade show active" id="info-tab-pane" role="tabpanel" aria-labelledby="info-tab" tabindex="0">
                            <div class="profile-section">
                                <h3 class="section-title"><i class="bi bi-person-badge"></i> Account Information</h3>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Username" class="form-label">Username</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-at"></i></span>
                                                <input asp-for="Username" class="form-control" readonly />
                                            </div>
                                            <small class="form-text text-muted">Username cannot be changed</small>
                                            <span asp-validation-for="Username" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="DisplayName" class="form-label">Display Name</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                                                <input asp-for="DisplayName" class="form-control" />
                                            </div>
                                            <small class="form-text text-muted">How your name appears to other users</small>
                                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label asp-for="Email" class="form-label">Email Address</label>
                                            <div class="input-group">
                                                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                                <input asp-for="Email" class="form-control" />
                                                @if (User.FindFirst("IsEmailVerified")?.Value == "true")
                                                {
                                                    <span class="verification-badge">
                                                        <i class="bi bi-check-circle-fill me-1"></i> Verified
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="verification-badge not-verified">
                                                        <i class="bi bi-exclamation-triangle-fill me-1"></i> Not Verified
                                                    </span>
                                                }
                                            </div>
                                            <small class="form-text text-muted">Your primary contact email</small>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Email Verification Alert -->
                                @if (User.FindFirst("IsEmailVerified")?.Value != "true")
                                {
                                    <div class="alert alert-warning d-flex" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                                        <div>
                                            <h5 class="alert-heading">Email Not Verified</h5>
                                            <p class="mb-0">Please verify your email to access all account features including password changes and security settings.</p>
                                            <button type="button" class="btn btn-sm btn-warning mt-2">
                                                <i class="bi bi-envelope me-1"></i> Resend Verification Email
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                            
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary btn-profile">
                                    <i class="bi bi-save"></i> Save Changes
                                </button>
                            </div>
                        </div>
                        
                        <!-- Security Tab -->
                        <div class="tab-pane fade" id="security-tab-pane" role="tabpanel" aria-labelledby="security-tab" tabindex="0">
                            <div class="profile-section">
                                <h3 class="section-title"><i class="bi bi-key"></i> Password Management</h3>
                                
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h5 class="mb-1 fs-6 fw-semibold">Change Your Password</h5>
                                            <p class="text-muted small mb-0">Last changed: <span class="fw-medium">3 months ago</span></p>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#changePasswordCollapse" aria-expanded="false" 
                                                @(User.FindFirst("IsEmailVerified")?.Value != "true" ? "disabled" : "")>
                                            <i class="bi bi-pencil me-1"></i> Update
                                        </button>
                                    </div>
                                    
                                    @if (User.FindFirst("IsEmailVerified")?.Value != "true")
                                    {
                                        <div class="alert alert-warning d-flex" role="alert">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            <div>
                                                <strong>Email verification required</strong>
                                                <p class="mb-0 small">You must verify your email address before you can change your password.</p>
                                            </div>
                                        </div>
                                    }
                                    
                                    <div class="collapse mt-3" id="changePasswordCollapse">
                                        <div class="card card-body border border-light-subtle rounded-4 bg-light bg-opacity-50">
                                            <form id="change-password-form" asp-action="ChangePassword" method="post">
                                                <div class="mb-3">
                                                    <label class="form-label">Current Password</label>
                                                    <div class="input-group">
                                                        <span class="input-group-text"><i class="bi bi-unlock"></i></span>
                                                        <input type="password" name="CurrentPassword" class="form-control" placeholder="Enter your current password" required />
                                                        <button class="btn btn-outline-secondary toggle-password" type="button">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <label class="form-label">New Password</label>
                                                    <div class="input-group">
                                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                                        <input type="password" name="NewPassword" id="new-password" class="form-control" placeholder="Enter new password" required />
                                                        <button class="btn btn-outline-secondary toggle-password" type="button">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <label class="form-label">Confirm New Password</label>
                                                    <div class="input-group">
                                                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                                        <input type="password" name="ConfirmPassword" class="form-control" placeholder="Confirm new password" required />
                                                        <button class="btn btn-outline-secondary toggle-password" type="button">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                
                                                <div class="d-flex justify-content-end gap-2">
                                                    <button type="button" class="btn btn-light" data-bs-toggle="collapse" data-bs-target="#changePasswordCollapse">
                                                        Cancel
                                                    </button>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="bi bi-check2"></i> Update Password
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="profile-section">
                                <h3 class="section-title"><i class="bi bi-shield-lock"></i> Two-Factor Authentication</h3>
                                
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h5 class="mb-1 fs-6 fw-semibold">Enhance Your Account Security</h5>
                                            <p class="text-muted small mb-0">Status: <span class="badge rounded-pill text-bg-danger">Disabled</span></p>
                                        </div>
                                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#twoFactorCollapse" aria-expanded="false">
                                            <i class="bi bi-shield-plus me-1"></i> Set Up
                                        </button>
                                    </div>
                                    
                                    <div class="collapse mt-3" id="twoFactorCollapse">
                                        <div class="card card-body border border-light-subtle rounded-4 bg-light bg-opacity-50">
                                            <div class="alert alert-info d-flex">
                                                <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                                                <div>
                                                    <strong>Enhanced security for your account</strong>
                                                    <p class="mb-0 small">Two-factor authentication adds an extra layer of security to your account. When enabled, you'll need to provide a verification code in addition to your password when signing in.</p>
                                                </div>
                                            </div>
                                            
                                            <div class="text-center py-4">
                                                <i class="bi bi-shield-lock-fill text-primary" style="font-size: 4rem;"></i>
                                                <h4 class="mt-3">Add an extra layer of security</h4>
                                                <p class="text-muted">Protect your account with two-factor authentication</p>
                                            </div>
                                            
                                            <div class="mb-4">
                                                <h5 class="fs-6 fw-semibold">How it works:</h5>
                                                <ol class="text-start ps-3">
                                                    <li class="mb-2">Download an authenticator app like Google Authenticator or Microsoft Authenticator</li>
                                                    <li class="mb-2">Scan the QR code that will be provided</li>
                                                    <li class="mb-2">Enter the verification code from the app</li>
                                                </ol>
                                            </div>
                                            
                                            <div class="d-flex justify-content-center gap-3">
                                                <button type="button" class="btn btn-light" data-bs-toggle="collapse" data-bs-target="#twoFactorCollapse">
                                                    Cancel
                                                </button>
                                                <a href="#" class="btn btn-primary">
                                                    <i class="bi bi-shield-check me-1"></i> Continue Setup
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="profile-section">
                                <h3 class="section-title" style="color: #dc3545;"><i class="bi bi-exclamation-triangle" style="color: #dc3545;"></i> Danger Zone</h3>
                                
                                <div class="card border border-danger border-opacity-25 rounded-4">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="card-title fs-6 fw-semibold">Delete Your Account</h5>
                                                <p class="card-text small text-muted">This action cannot be undone. All your data will be permanently deleted.</p>
                                            </div>
                                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="collapse" data-bs-target="#deleteAccountCollapse" aria-expanded="false">
                                                <i class="bi bi-trash me-1"></i> Delete Account
                                            </button>
                                        </div>
                                        
                                        <div class="collapse mt-3" id="deleteAccountCollapse">
                                            <div class="alert alert-danger d-flex align-items-start">
                                                <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                                                <div>
                                                    <h5 class="alert-heading">Warning: This action cannot be undone!</h5>
                                                    <p>All your data, including questions, answers, and comments will be permanently deleted.</p>
                                                </div>
                                            </div>
                                            
                                            <form id="delete-account-form" asp-action="DeleteAccount" method="post">
                                                <div class="mb-3">
                                                    <label class="form-label">Confirm by typing your password</label>
                                                    <div class="input-group">
                                                        <span class="input-group-text"><i class="bi bi-key-fill"></i></span>
                                                        <input type="password" name="Password" class="form-control" placeholder="Enter your password" required />
                                                    </div>
                                                </div>
                                                
                                                <div class="mb-3 form-check">
                                                    <input type="checkbox" class="form-check-input" id="confirmDelete" required />
                                                    <label class="form-check-label" for="confirmDelete">
                                                        I understand that this action is permanent and cannot be reversed
                                                    </label>
                                                </div>
                                                
                                                <div class="d-flex justify-content-end gap-2">
                                                    <button type="button" class="btn btn-light" data-bs-toggle="collapse" data-bs-target="#deleteAccountCollapse">
                                                        Cancel
                                                    </button>
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash"></i> Permanently Delete Account
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Integrations Tab -->
                        <div class="tab-pane fade" id="integrations-tab-pane" role="tabpanel" aria-labelledby="integrations-tab" tabindex="0">
                            <div class="profile-section">
                                <h3 class="section-title"><i class="bi bi-git"></i> Gitea Integration</h3>
                                
                                <div class="card border rounded-4 mb-4">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="me-3">
                                                <img src="/images/gitea-logo.svg" alt="Gitea Logo" width="48" height="48" />
                                            </div>
                                            <div>
                                                <h5 class="card-title mb-1">Connect with Gitea</h5>
                                                <p class="card-text text-muted small">Link your Gitea account to enable code sharing and repository integration</p>
                                            </div>
                                        </div>
                                        
                                        @if (Model.GiteaUsername != null)
                                        {
                                            <div class="alert alert-success d-flex align-items-center">
                                                <i class="bi bi-check-circle-fill me-2"></i>
                                                <div>
                                                    <strong>Connected to Gitea!</strong>
                                                    <p class="mb-0">Your account is linked to Gitea as <strong>@Model.GiteaUsername</strong></p>
                                                </div>
                                            </div>
                                            
                                            <div class="d-flex justify-content-end">
                                                <form asp-action="DisconnectGitea" method="post">
                                                    <button type="submit" class="btn btn-outline-danger">
                                                        <i class="bi bi-link-break me-1"></i> Disconnect
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-light border d-flex align-items-start">
                                                <i class="bi bi-info-circle-fill me-2 text-primary"></i>
                                                <div>
                                                    <strong>Benefits of Gitea Integration:</strong>
                                                    <ul class="mb-0 ps-3 mt-2">
                                                        <li>Share code snippets directly from your repositories</li>
                                                        <li>Link issues and pull requests in discussions</li>
                                                        <li>Showcase your projects on your profile</li>
                                                    </ul>
                                                </div>
                                            </div>
                                            
                                            <div class="d-flex justify-content-end">
                                                <a href="/Account/ConnectGitea" class="btn btn-primary">
                                                    <i class="bi bi-git me-1"></i> Connect with Gitea
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            
                            <div class="profile-section">
                                <h3 class="section-title"><i class="bi bi-globe"></i> Other Integrations</h3>
                                
                                <div class="row g-4">
                                    <div class="col-md-6">
