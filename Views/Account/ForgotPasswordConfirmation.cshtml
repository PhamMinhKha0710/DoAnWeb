@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account-styles.css" />
}

<div class="account-page">
    <div class="account-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="account-card">
                    <div class="account-header text-center">
                        <i class="bi bi-envelope-check-fill text-primary display-1 mb-3"></i>
                        <h2 class="account-title">Check Your Email</h2>
                        <p class="account-subtitle">We've sent reset instructions if the email exists</p>
                    </div>
                    
                    <div class="account-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-info d-flex align-items-center">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <div>@Html.Raw(TempData["SuccessMessage"])</div>
                            </div>
                        }
                        
                        <div class="alert alert-light border">
                            <div class="d-flex">
                                <div class="me-3 text-primary fs-4">
                                    <i class="bi bi-lightbulb"></i>
                                </div>
                                <div>
                                    <strong>Important Note</strong>
                                    <p class="small mb-0 mt-1">
                                        If you don't receive an email within a few minutes, please check your spam folder 
                                        or make sure the email address is correct.
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mt-4">
                            <a asp-action="Login" class="btn btn-primary account-submit-btn">
                                <i class="bi bi-arrow-left me-2"></i> Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 