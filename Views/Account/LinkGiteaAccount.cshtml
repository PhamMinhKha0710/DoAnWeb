@model DoAnWeb.ViewModels.LinkGiteaViewModel

@{
    ViewData["Title"] = "Link Gitea Account";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-git me-2"></i>Link Gitea Account
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="mb-0"></div>
                        </div>
                    }
                    
                    <div class="alert alert-info mb-4">
                        <div class="d-flex">
                            <div class="me-3 fs-1 text-primary">
                                <i class="bi bi-info-circle"></i>
                            </div>
                            <div>
                                <h5>Link your DevCommunity account to Gitea</h5>
                                <p class="mb-0">
                                    By linking your account to Gitea, you'll be able to:
                                </p>
                                <ul class="mt-2">
                                    <li>Create and manage repositories directly from DevCommunity</li>
                                    <li>Share your code snippets in questions and answers</li>
                                    <li>Showcase your repositories on your profile</li>
                                    <li>Collaborate with other developers more easily</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="card h-100 border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="bi bi-magic me-2"></i>Automatic Setup</h5>
                                </div>
                                <div class="card-body">
                                    <p>Automatically create a new Gitea account that's linked to your DevCommunity profile.</p>
                                    <p class="text-muted small">This is the easiest way to get started. We'll create a Gitea account with the same username as your DevCommunity account.</p>
                                    <form asp-action="AutoLinkGiteaAccount" method="post">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-link-45deg me-2"></i>Create & Link Gitea Account
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0"><i class="bi bi-person-check me-2"></i>Link Existing Account</h5>
                                </div>
                                <div class="card-body">
                                    <p>Already have a Gitea account? Link your existing account below.</p>
                                    <form asp-action="LinkGiteaAccount" method="post" class="mt-3">
                                        <input asp-for="CreateNewAccount" type="hidden" value="false" />
                                        
                                        <div class="mb-3">
                                            <label asp-for="GiteaUsername" class="form-label"></label>
                                            <input asp-for="GiteaUsername" class="form-control" />
                                            <span asp-validation-for="GiteaUsername" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="GiteaPassword" class="form-label"></label>
                                            <input asp-for="GiteaPassword" type="password" class="form-control" />
                                            <span asp-validation-for="GiteaPassword" class="text-danger"></span>
                                        </div>
                                        
                                        <button type="submit" class="btn btn-secondary w-100">
                                            <i class="bi bi-link-45deg me-2"></i>Link Existing Account
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-action="Profile" class="text-decoration-none">
                            <i class="bi bi-arrow-left me-2"></i>Back to Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 