@model DoAnWeb.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center my-5">
    <div class="col-md-5">
        <div class="text-center mb-4">
            <i class="bi bi-code-square fs-1 text-primary mb-2"></i>
            <h2 class="fw-bold">Welcome back</h2>
            <p class="text-muted">Sign in to your DevCommunity account</p>
        </div>
        
        <div class="card auth-card">
            <div class="card-body p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <div>@TempData["SuccessMessage"]</div>
                    </div>
                }
                
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
                    
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username or Email</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="Username" class="form-control border-start-0" placeholder="Enter your username or email" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <label asp-for="Password" class="form-label">Password</label>
                            <a href="#" class="text-decoration-none small">Forgot password?</a>
                        </div>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Password" class="form-control border-start-0" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-4 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                    </div>
                    
                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary py-2">Sign in</button>
                    </div>
                    
                    <div class="text-center">
                        <p class="mb-0">Don't have an account? <a asp-action="Register" class="text-decoration-none fw-medium">Create account</a></p>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <p class="text-muted small">
                By signing in, you agree to our <a href="#" class="text-decoration-none">Terms of Service</a> and <a href="#" class="text-decoration-none">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}