@model DoAnWeb.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

@section Styles {
    <link rel="stylesheet" href="~/css/account-styles.css" />
}

<div class="account-page">
    <div class="account-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="account-card">
                    <div class="account-header">
                        <h2 class="account-title">Reset Your Password</h2>
                        <p class="account-subtitle">Enter your email to receive a password reset link</p>
                    </div>
                    
                    <div class="account-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success d-flex align-items-center">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                <div>@TempData["SuccessMessage"]</div>
                            </div>
                        }
                        
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger d-flex align-items-center">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@TempData["ErrorMessage"]</div>
                            </div>
                        }
                        
                        <form asp-action="ForgotPassword" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            
                            <div class="account-form-group">
                                <i class="bi bi-envelope account-form-icon"></i>
                                <input asp-for="Email" class="form-control account-form-control" placeholder="Email Address" autocomplete="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="alert alert-info d-flex align-items-center mb-4">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <div>A password reset link will be sent to your email address if it exists in our database.</div>
                            </div>
                            
                            <button type="submit" class="btn btn-primary account-submit-btn w-100">
                                Send Reset Link
                            </button>
                        </form>
                    </div>
                    
                    <div class="account-footer text-center">
                        <p class="mb-0">
                            <a asp-action="Login" class="text-decoration-none fw-medium">
                                <i class="bi bi-arrow-left me-1"></i> Back to Login
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 