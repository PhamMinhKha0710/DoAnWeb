@model IEnumerable<DoAnWeb.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h1 class="mb-0">Users</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">All Users</h5>
                    <div class="d-flex">
                        <div class="input-group me-2" style="width: 300px;">
                            <input type="text" class="form-control" placeholder="Filter by user...">
                            <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i></button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-secondary active">Reputation</button>
                            <button type="button" class="btn btn-outline-secondary">New users</button>
                            <button type="button" class="btn btn-outline-secondary">Voters</button>
                            <button type="button" class="btn btn-outline-secondary">Editors</button>
                            <button type="button" class="btn btn-outline-secondary">Moderators</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var user in Model)
                        {
                            <div class="col-md-3 mb-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            <img src="@(string.IsNullOrEmpty(user.AvatarUrl) ? "/images/default-avatar.png" : user.AvatarUrl)" 
                                                 class="rounded-circle me-2" width="48" height="48" alt="@user.DisplayName">
                                            <div>
                                                <h5 class="mb-0">
                                                    <a asp-controller="Users" asp-action="Details" asp-route-id="@user.UserId" class="text-decoration-none">@user.DisplayName</a>
                                                </h5>
                                                <small class="text-muted">@user.Username</small>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <div class="fw-bold text-primary">1</div>
                                                <small class="text-muted">reputation</small>
                                            </div>
                                            <div>
                                                <div class="fw-bold">@user.Questions.Count</div>
                                                <small class="text-muted">questions</small>
                                            </div>
                                            <div>
                                                <div class="fw-bold">@user.Answers.Count</div>
                                                <small class="text-muted">answers</small>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(user.Bio))
                                        {
                                            <p class="mt-3 small text-muted">@(user.Bio.Length > 100 ? user.Bio.Substring(0, 100) + "..." : user.Bio)</p>
                                        }
                                    </div>
                                    <div class="card-footer bg-light">
                                        <small class="text-muted">Member since @(user.CreatedDate?.ToString("MMM yyyy") ?? "unknown")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            No users found.
                        </div>
                    }

                    <div class="d-flex justify-content-center mt-4">
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript needed for the users page
    </script>
}