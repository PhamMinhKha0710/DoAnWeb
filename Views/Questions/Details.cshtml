@model DoAnWeb.Models.Question

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Questions</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="card-title mb-0">@Model.Title</h1>
                    @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.UserId.ToString())
                    {
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.QuestionId" class="btn btn-outline-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.QuestionId" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    }
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <span class="badge bg-primary">@Model.Score votes</span>
                            <span class="badge bg-secondary">@Model.ViewCount views</span>
                            <span class="badge bg-info">@Model.Status</span>
                        </div>
                        <div>
                            <small class="text-muted">Asked on @Model.CreatedDate.ToString("MMM dd, yyyy")</small>
                            @if (Model.UpdatedDate != Model.CreatedDate)
                            {
                                <small class="text-muted"> | Updated on @Model.UpdatedDate?.ToString("MMM dd, yyyy")</small>
                            }
                        </div>
                    </div>

                    <div class="question-body mb-4">
                        @Html.Raw(Model.Body)
                    </div>

                    <div class="mb-3">
                        @foreach (var tag in Model.Tags)
                        {
                            <a asp-action="Index" asp-route-tag="@tag.TagName" class="badge bg-secondary text-decoration-none">@tag.TagName</a>
                        }
                    </div>

                    <div class="card bg-light">
                        <div class="card-body">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <img src="@(string.IsNullOrEmpty(Model.User?.AvatarUrl) ? "/img/default-avatar.png" : Model.User.AvatarUrl)" alt="@Model.User?.DisplayName" class="rounded-circle" width="50" height="50">
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="mt-0">@Model.User?.DisplayName</h5>
                                    <p class="mb-0">@Model.User?.Bio</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success mb-3">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mb-3">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex justify-content-between">
                            <div>
                                <form asp-action="Vote" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.QuestionId" />
                                    <input type="hidden" name="isUpvote" value="true" />
                                    <button type="submit" class="btn btn-outline-success btn-sm">Upvote</button>
                                </form>
                                <form asp-action="Vote" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.QuestionId" />
                                    <input type="hidden" name="isUpvote" value="false" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Downvote</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Answers Section -->
            <h3 class="mt-4">Answers (@(Model.Answers?.Count() ?? 0))</h3>
            <div class="answers-container">
                @if (Model.Answers != null && Model.Answers.Any())
                {
                    foreach (var answer in Model.Answers.OrderByDescending(a => a.IsAccepted).ThenByDescending(a => a.Score))
                    {
                        <div class="card mb-3 @(answer.IsAccepted ? "border-success" : "")">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div class="vote-section">
                                        <span class="badge bg-secondary">@answer.Score votes</span>
                                        @if (answer.IsAccepted)
                                        {
                                            <span class="badge bg-success">Accepted</span>
                                        }
                                    </div>
                                    <small class="text-muted">Answered on @answer.CreatedDate.ToString("MMM dd, yyyy")</small>
                                </div>
                                <div class="answer-content mt-3">
                                    @Html.Raw(answer.Body)
                                </div>
                                <div class="answer-footer mt-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="user-info">
                                            <small class="text-muted">Answered by @answer.User.DisplayName</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No answers yet. Be the first to answer!</p>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">Your Answer</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="SubmitAnswer" method="post">
                                <input type="hidden" name="questionId" value="@Model.QuestionId" />
                                <div class="form-group">
                                    <textarea name="body" class="form-control" rows="6" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mt-3">Post Your Answer</button>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-4">
                        <p class="mb-0">Please <a asp-controller="Account" asp-action="Login">log in</a> to post an answer.</p>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
