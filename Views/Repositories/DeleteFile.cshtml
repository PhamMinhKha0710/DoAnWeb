@model DoAnWeb.Models.RepositoryFile

@{
    ViewData["Title"] = $"Delete {Model.FilePath}";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Repository" asp-action="Index">Repositories</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RepositoryId">@Model.Repository?.RepositoryName</a></li>
                    <li class="breadcrumb-item"><a asp-action="Files" asp-route-id="@Model.RepositoryId">Files</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete @Model.FilePath</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete File</h4>
                </div>
                <div class="card-body">
                    <h3>Are you sure you want to delete this file?</h3>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This action cannot be undone. The file will be permanently deleted from the repository.
                    </div>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-3">File Path</dt>
                        <dd class="col-sm-9">@Model.FilePath</dd>
                        
                        <dt class="col-sm-3">Size</dt>
                        <dd class="col-sm-9">@(Model.FileSize > 1024 ? $"{Model.FileSize / 1024} KB" : $"{Model.FileSize} bytes")</dd>
                        
                        <dt class="col-sm-3">Last Updated</dt>
                        <dd class="col-sm-9">@Model.UpdatedDate?.ToString("MMM dd, yyyy HH:mm")</dd>
                    </dl>
                    
                    <form asp-action="DeleteFile" method="post" class="mt-4">
                        <input type="hidden" asp-for="FileId" />
                        <input type="hidden" asp-for="RepositoryId" />
                        <div class="mb-3">
                            <label for="commitMessage" class="form-label">Commit Message</label>
                            <input type="text" class="form-control" id="commitMessage" name="commitMessage" required placeholder="e.g. Delete file">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Delete File</button>
                            <a asp-action="ViewFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@Model.FileId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>