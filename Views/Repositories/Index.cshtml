@model IEnumerable<DoAnWeb.Models.Repository>

@{
    ViewData["Title"] = "Repositories";
    bool isPersonalRepositories = ViewData["PersonalRepositories"] != null && (bool)ViewData["PersonalRepositories"];
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8">
            @if (isPersonalRepositories)
            {
                <h1>My Repositories</h1>
            }
            else
            {
                <h1>Public Repositories</h1>
                <p class="text-muted">Showing popular public repositories. <a asp-controller="Account" asp-action="Login">Log in</a> to see your personal repositories.</p>
            }
        </div>
        <div class="col-md-4 text-end">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-action="Create" class="btn btn-primary">Create Repository</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Log in to create</a>
            }
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchTerm" class="form-control me-2" placeholder="Search repositories..." value="@ViewData["SearchTerm"]" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            @if (isPersonalRepositories)
            {
                <span>You don't have any repositories yet. <a asp-action="Create">Create a repository</a> to get started!</span>
            }
            else
            {
                <span>No public repositories found. <a asp-controller="Account" asp-action="Login">Log in</a> to see your personal repositories or create new ones.</span>
            }
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-action="Details" asp-route-id="@item.RepositoryId">@item.RepositoryName</a>
                                @if (item.Visibility == "Private")
                                {
                                    <span class="badge bg-secondary">Private</span>
                                }
                            </h5>
                            <p class="card-text">@(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Created by @item.Owner?.DisplayName</small>
                                <div>
                                    <a asp-action="Files" asp-route-id="@item.RepositoryId" class="btn btn-sm btn-outline-primary">Files</a>
                                    <a asp-action="Commits" asp-route-id="@item.RepositoryId" class="btn btn-sm btn-outline-secondary">Commits</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>