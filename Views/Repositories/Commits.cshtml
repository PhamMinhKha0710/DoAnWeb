@model DoAnWeb.Models.Repository

@{
    ViewData["Title"] = $"{Model.RepositoryName} - Commits";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Repositories</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RepositoryId">@Model.RepositoryName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Commits</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-clock-history"></i> Commit History
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.RepositoryCommits == null || !Model.RepositoryCommits.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> This repository doesn't have any commits yet.
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var commit in Model.RepositoryCommits.OrderByDescending(c => c.CommitDate))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@commit.Message</h5>
                                        <small>@commit.CommitDate?.ToString("MMM dd, yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-1">
                                        <span class="badge bg-secondary">@commit.CommitHash?.Substring(0, 7)</span>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <small class="text-muted">Committed by @commit.User?.DisplayName</small>
                                        </div>
                                        <div>
                                            <a asp-action="ViewCommit" asp-route-id="@Model.RepositoryId" asp-route-commitId="@commit.CommitId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View Changes
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>