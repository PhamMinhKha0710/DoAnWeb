@model DoAnWeb.Models.Repository

@{
    ViewData["Title"] = "Delete Repository";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Repository" asp-action="Index">Repositories</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RepositoryId">@Model.RepositoryName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>Delete Repository</h4>
                </div>
                <div class="card-body">
                    <h3>Are you sure you want to delete this repository?</h3>
                    <div class="alert alert-warning">
                        <strong>Warning:</strong> This action cannot be undone. All repository files, commits, and associated data will be permanently deleted.
                    </div>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-3">Repository Name</dt>
                        <dd class="col-sm-9">@Model.RepositoryName</dd>
                        
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description provided." : Model.Description)</dd>
                        
                        <dt class="col-sm-3">Visibility</dt>
                        <dd class="col-sm-9">@Model.Visibility</dd>
                        
                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.CreatedDate?.ToString("MMM dd, yyyy")</dd>
                    </dl>
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="RepositoryId" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Delete Repository</button>
                            <a asp-action="Details" asp-route-id="@Model.RepositoryId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>