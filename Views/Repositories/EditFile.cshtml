@model DoAnWeb.Models.RepositoryFile

@{
    ViewData["Title"] = $"Edit {Model.FilePath}";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Repositories</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RepositoryId">@Model.Repository?.RepositoryName</a></li>
                    <li class="breadcrumb-item"><a asp-action="Files" asp-route-id="@Model.RepositoryId">Files</a></li>
                    <li class="breadcrumb-item"><a asp-action="ViewFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@Model.FileId">@Model.FilePath</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">Edit File: @Model.FilePath</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditFile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="FileId" />
                        <input type="hidden" asp-for="RepositoryId" />
                        <input type="hidden" asp-for="FilePath" />
                        
                        <div class="mb-3">
                            <label for="content" class="form-label">File Content</label>
                            <textarea class="form-control" id="content" name="content" rows="20" style="font-family: monospace;">@Model.Content</textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="commitMessage" class="form-label">Commit Message</label>
                            <input type="text" class="form-control" id="commitMessage" name="commitMessage" required placeholder="e.g. Update file content">
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="ViewFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@Model.FileId" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // You can add code editor initialization here if needed (e.g., CodeMirror, Monaco Editor)
        document.addEventListener('DOMContentLoaded', function () {
            // Code editor initialization
        });
    </script>
}