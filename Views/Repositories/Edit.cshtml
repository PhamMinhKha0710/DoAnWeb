@model DoAnWeb.ViewModels.RepositoryViewModel

@{
    ViewData["Title"] = "Edit Repository";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Repository" asp-action="Index">Repositories</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RepositoryId">@Model.RepositoryName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Edit Repository</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RepositoryId" />
                        
                        <div class="mb-3">
                            <label asp-for="RepositoryName" class="form-label"></label>
                            <input asp-for="RepositoryName" class="form-control" />
                            <span asp-validation-for="RepositoryName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Visibility" class="form-label"></label>
                            <select asp-for="Visibility" class="form-select">
                                <option value="Public">Public</option>
                                <option value="Private">Private</option>
                            </select>
                            <span asp-validation-for="Visibility" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Details" asp-route-id="@Model.RepositoryId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}