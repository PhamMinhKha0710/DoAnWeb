@model DoAnWeb.Models.RepositoryFile

@{
    ViewData["Title"] = $"{Model.Repository?.RepositoryName} - {Model.FilePath}";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Repository" asp-action="Index">Repositories</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RepositoryId">@Model.Repository?.RepositoryName</a></li>
                    <li class="breadcrumb-item"><a asp-action="Files" asp-route-id="@Model.RepositoryId">Files</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.FilePath</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-file-earmark-code"></i> @Model.FilePath
                    </h4>
                    @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.Repository?.OwnerId.ToString())
                    {
                        <div>
                            <a asp-action="EditFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@Model.FileId" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="DeleteFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@Model.FileId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    }
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <div>
                            <span class="badge bg-secondary">@(Model.FileSize > 1024 ? $"{Model.FileSize / 1024} KB" : $"{Model.FileSize} bytes")</span>
                        </div>
                        <div>
                            <small class="text-muted">Last updated on @Model.UpdatedDate?.ToString("MMM dd, yyyy HH:mm")</small>
                        </div>
                    </div>

                    <div class="file-content bg-light p-3 rounded">
                        <pre><code>@Model.Content</code></pre>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Files" asp-route-id="@Model.RepositoryId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Files
                        </a>
                        <a asp-action="FileHistory" asp-route-id="@Model.RepositoryId" asp-route-fileId="@Model.FileId" class="btn btn-outline-info">
                            <i class="bi bi-clock-history"></i> View History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add syntax highlighting if needed
        document.addEventListener('DOMContentLoaded', function () {
            // You can add code highlighting library initialization here if needed
        });
    </script>
}