@model DoAnWeb.Models.Repository

@{
    ViewData["Title"] = $"{Model.RepositoryName} - Files";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Repositories</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RepositoryId">@Model.RepositoryName</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Files</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="bi bi-folder"></i> @Model.RepositoryName Files
                    </h4>
                    @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.OwnerId.ToString())
                    {
                        <div>
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#uploadFileModal">
                                <i class="bi bi-upload"></i> Upload File
                            </button>
                        </div>
                    }
                </div>
                <div class="card-body">
                    @if (Model.RepositoryFiles == null || !Model.RepositoryFiles.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> This repository doesn't have any files yet.
                            @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.OwnerId.ToString())
                            {
                                <span>Upload your first file to get started!</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Size</th>
                                        <th>Last Updated</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model.RepositoryFiles.OrderBy(f => f.FilePath))
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-file-earmark-code"></i>
                                                <a asp-action="ViewFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@file.FileId">
                                                    @file.FilePath
                                                </a>
                                            </td>
                                            <td>@(file.FileSize > 1024 ? $"{file.FileSize / 1024} KB" : $"{file.FileSize} bytes")</td>
                                            <td>@file.UpdatedDate?.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>
                                                <a asp-action="ViewFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@file.FileId" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                @if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.OwnerId.ToString())
                                                {
                                                    <a asp-action="EditFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@file.FileId" class="btn btn-sm btn-outline-secondary">
                                                        <i class="bi bi-pencil"></i> Edit
                                                    </a>
                                                    <a asp-action="DeleteFile" asp-route-id="@Model.RepositoryId" asp-route-fileId="@file.FileId" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.OwnerId.ToString())
{
    <!-- Upload File Modal -->
    <div class="modal fade" id="uploadFileModal" tabindex="-1" aria-labelledby="uploadFileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="UploadFile" asp-route-id="@Model.RepositoryId" method="post" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title" id="uploadFileModalLabel">Upload File</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="filePath" class="form-label">File Path</label>
                            <input type="text" class="form-control" id="filePath" name="filePath" required placeholder="e.g. src/main.js">
                            <div class="form-text">Specify the path where the file should be stored in the repository.</div>
                        </div>
                        <div class="mb-3">
                            <label for="fileContent" class="form-label">File Content</label>
                            <textarea class="form-control" id="fileContent" name="fileContent" rows="10" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="commitMessage" class="form-label">Commit Message</label>
                            <input type="text" class="form-control" id="commitMessage" name="commitMessage" required placeholder="e.g. Add new file">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}